            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick_showPlat"
                android:padding="0dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:backgroundTint="@android:color/holo_orange_light"
                app:srcCompat="@android:drawable/ic_dialog_info" />

            <EditText
                android:id="@+id/push3"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="none|text|textEmailAddress|textPersonName"
                android:text="push4" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/floatingActionButton22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:onClick="onClick"
                android:padding="0dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                app:backgroundTint="@color/colorAccent"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel" />
        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="10dp"
        android:paddingBottom="10dp"
        android:text="Пакеты платежных поручений на согласование"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/dec4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="452dp"
        android:layout_marginEnd="16dp"
        android:clickable="true"
        android:onClick="onClick_showSettings"
        app:backgroundTint="@color/colorAccent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_preferences" />

</android.support.constraint.ConstraintLayout>